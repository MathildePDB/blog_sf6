{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
	<div class="container">
		<div class="my-5">
			<h1>Détails de l'article</h1>
		</div>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ post.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ post.title }}</td>
				</tr>
				<tr>
					<th>Sous-titre</th>
					<td>{{ post.subtitle }}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ post.content }}</td>
				</tr>
				<tr>
					<th>Slug</th>
					<td>{{ post.slug }}</td>
				</tr>
				<tr>
					<th>Created_at</th>
					<td>{{ post.createdAt ? post.createdAt|date('d-m-Y H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
		<div class="d-flex justify-content-between">
			<button class="btn btn-success">
				<a href="{{ path('app_admin_posts_edit', {'id': post.id}) }}" class="nav-link text-white">Modifier</a>
			</button>
			{{ include('admin/posts/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
