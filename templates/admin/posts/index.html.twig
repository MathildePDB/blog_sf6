{% extends 'base.html.twig' %}

{% block title %}Espace administrateur{% endblock %}

{% block body %}
    <div class="container">
        <div class="my-5">
            <h1>Articles publiés sur le site</h1>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Slug</th>
                    <th>Date de création</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.user }}</td>
                    <td>{{ post.slug }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                    <td>
                        <button class="btn btn-dark"><a href="{{ path('app_admin_posts_show', {'id': post.id}) }}" class="nav-link">voir</a></button>
                        <button class="btn btn-primary"><a href="{{ path('app_admin_posts_edit', {'id': post.id}) }}" class="nav-link">modifier</a></button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">aucun article posté pour le moment</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {# <button class="btn btn-primary"><a href="{{ path('app_posts_new') }}" class="nav-link text-white">Nouvel article</a></button> #}
    </div>
{% endblock %}
