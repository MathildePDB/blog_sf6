{% extends 'base.html.twig' %}

{% block title %}Espace administrateur
{% endblock %}

{% block body %}
	<div class="container">
		<div class="my-5">
			<h1>Liste des commentaires</h1>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Note</th>
					<th>Message</th>
					<th>Date</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for comment in comments %}
					<tr>
						<td>{{ comment.id }}</td>
						<td>{{ comment.ranking }}</td>
						<td>{{ comment.content }}</td>
						<td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td class="d-flex">
							<button class="btn btn-primary me-4"><a href="{{ path('app_admin_comments_edit', {'id': comment.id}) }}" class="nav-link">modifier</a></button>
							{% include "admin/comments/_delete_form.html.twig" %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
