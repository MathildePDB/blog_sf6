<form method="post" action="{{ path('app_admin_category_delete', {'slug': category.slug}) }}" onsubmit="return confirm('Êtes-vous sûr.e de vouloir supprimer cette catégorie ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.slug) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
