{% extends "base.html.twig" %}
{% block body %}
	<div class="container">
		<div class=" my-5">
			<h1>Accueil</h1>
		</div>
		<section>
            <h2>Derniers articles</h2>
            <div class="d-flex flex-wrap justify-content-evenly">
            {% for post in posts %}
				<div class="card my-3" style="width: 28%;">
					<img src="" class="card-img-top" alt="">
					<div class="card-body">
						<h3 class="card-title">{{ post.title }}</h3>
						<p class="card-text">{{ post.subtitle }}</p>
                        <p class="card-text">{{ post.createdAt ? post.createdAt|date('d-m-Y') : '' }}</p>
						<a href="{{ path('app_articles_show', {slug: post.slug}) }}" class="btn btn-primary">Voir plus</a>
					</div>
				</div>
			{% endfor %}
            </div>
		</section>
