{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="container">
        <div class=" my-5">
            <h1>Créer un compte</h1>
        </div>
        <div class="d-flex justify-content-end align-items-center pb-2">
            <p class="mx-3 my-0">Vous avez déjà un compte ?</p>
            <button class="btn btn-primary"><a href="{{ path('app_login') }}" class="nav-link text-white">Se connecter</a></button>
        </div>
        {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm.firstname) }}
            {{ form_widget(registrationForm.lastname) }}
            {{ form_widget(registrationForm.email) }}
            {{ form_widget(registrationForm.plainPassword, { label: 'Password' }) }}
            <div class="d-flex align-items-center m-2">
                {{ form_widget(registrationForm.agreeTerms) }}
                <p class="m-0">Accepter les termes</p>
            </div>      
            <button type="submit" class="btn btn-success">Enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
